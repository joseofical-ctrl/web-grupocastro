---
const beneficiosSeguridad = [
  { 
    titulo: "Monitoreo Remoto", 
    desc: "Vigila tu hogar o negocio en tiempo real desde cualquier smartphone.", 
    icon: "fa-mobile-alt",
    hoverColor: "hover:border-red-600/50 hover:shadow-red-600/20"
  },
  { 
    titulo: "Alta Definición", 
    desc: "Cámaras con tecnología IP y Analógica de máxima nitidez.", 
    icon: "fa-video",
    hoverColor: "hover:border-blue-600/50 hover:shadow-blue-600/20"
  },
  { 
    titulo: "Detección Inteligente", 
    desc: "Alertas instantáneas ante cualquier movimiento sospechoso.", 
    icon: "fa-bell",
    hoverColor: "hover:border-orange-500/50 hover:shadow-orange-500/20"
  },
  { 
    titulo: "Instalación Certificada", 
    desc: "Técnicos especialistas garantizan un acabado profesional y seguro.", 
    icon: "fa-tools",
    hoverColor: "hover:border-slate-900/50 hover:shadow-slate-900/20"
  }
];
---

<section class="py-16 bg-white relative overflow-hidden"> <div class="container mx-auto px-6">
    
    <div class="flex flex-col lg:flex-row items-center justify-between mb-12 gap-8"> <div class="lg:w-1/2">
        <h2 class="text-red-600 font-black tracking-widest uppercase text-xs mb-4 italic">Seguridad Integral</h2>
        <h3 class="text-4xl md:text-5xl font-black text-slate-900 uppercase tracking-tighter leading-none mb-6">
          Sistemas de <span class="text-red-600">Vigilancia</span> de Última Generación
        </h3>
        <p class="text-slate-600 font-medium text-lg italic leading-relaxed">
          Protege lo que más importa con la mejor tecnología de seguridad en Huancayo.
        </p>
      </div>
      
      <div class="lg:w-1/2 flex flex-wrap justify-center lg:justify-end gap-8 opacity-50 grayscale hover:grayscale-0 transition-all duration-700">
        <span class="text-2xl font-black text-[#EE2128] tracking-tighter uppercase">Hikvision</span>
        <span class="text-2xl font-black text-[#FF6900] tracking-tighter uppercase">Ezviz</span>
        <span class="text-2xl font-black text-[#006591] tracking-tighter uppercase">Dahua</span>
      </div>
    </div>

    <div class="grid lg:grid-cols-2 gap-16 items-start"> <div class="relative group flex justify-center items-center -translate-y-8 lg:-translate-y-6"> <div class="absolute -inset-4 bg-sky-600/10 rounded-[3rem] blur-2xl group-hover:bg-sky-600/20 transition-all duration-300"></div>
        
        <div class="relative z-10 w-full max-w-[550px] max-h-[450px]">
          <img 
            src="/imagenes/CamarassSegurdad_trio.png" 
            alt="Kits de Cámaras de Seguridad" 
            class="w-full h-full object-contain drop-shadow-[0_20px_40px_rgba(0,0,0,0.2)] transform group-hover:scale-105 transition-all duration-700"
          />
        </div>
      </div>

      <div class="grid sm:grid-cols-2 gap-6">
        {beneficiosSeguridad.map(item => (
          <div class={`p-6 rounded-3xl bg-slate-50 border border-slate-100 transition-all duration-500 group cursor-default ${item.hoverColor} hover:bg-white hover:shadow-2xl`}>
            <div class="w-12 h-12 rounded-2xl bg-red-600 flex items-center justify-center text-white mb-6 group-hover:rotate-12 transition-transform shadow-lg shadow-red-600/20">
              <i class={`fas ${item.icon} text-xl`}></i>
            </div>
            <h4 class="text-slate-900 font-black text-sm uppercase mb-2 tracking-tight">{item.titulo}</h4>
            <p class="text-slate-500 text-[11px] font-bold leading-relaxed uppercase tracking-tighter">
              {item.desc}
            </p>
          </div>
        ))}
        
        <div class="sm:col-span-2 mt-6">
          <a 
            href="https://wa.me/51993996443?text=Hola%20Grupo%20Castro,%20vengo%20de%20la%20web%20y%20deseo%20una%20cotización%20de%20cámaras." 
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-3 bg-red-600 hover:bg-red-700 text-white px-10 py-5 rounded-2xl font-black text-xs uppercase tracking-[0.2em] transition-all shadow-xl shadow-red-600/30 active:scale-95"
          >
            <i class="fab fa-whatsapp text-lg"></i>
            Solicitar Presupuesto
          </a>
        </div>
      </div>
    </div>
  </div>
</section>